{% extends "base.twig" %}
{% block title %} - Login page{% endblock %}
{% block  greetings%}<h1>Hi there! Please enter your email and password to log in</h1>{% endblock%}
{% block content %}
    {% if isRedirected == true %}
        <div class="row" data-aos="zoom-in">
            <div class="col-md-8 offset-md-2">
                <div class="alert alert-success">
                    <h4 class="alert-heading text-center">Congratulations!</h4>
                    <p class='text-center'>You have been successfully registered. Now you can enter the site using your email and password!</p>
                </div>
            </div>
        </div>
    {% endif %}
    {{ error|raw }}
    <div class="row" data-aos="zoom-in">
        <div class="col-md-12 p-3">
            <form action="" method="POST">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email" value="{{ email }}">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="pass" value="">
                </div>
                <button type="submit" class="btn btn-dark">Submit</button>
            </form>
        </div>
    </div>
{% endblock %}



